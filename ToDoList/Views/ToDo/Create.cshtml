@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, AuthoringTagHelpers
@model ToDoList.Model.ToDoItem

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Create</title>
    <link rel="stylesheet" href="~/css/StyleCreate.css" />
</head>
<body>
    <div class="menu">
        <ul>
            <li id="home" onclick="window.location.href = '/Index'">Home</li>
            <li id="today" onclick="window.location.href = '/TodayTasks'">Today</li>
            <li id="tomorrow" onclick="window.location.href = '/TomorrowTasks'">Tomorrow</li>
        </ul>
    </div>
    <div class="container">
        <form asp-action="Create">
            <p>
                <label for="new-item">Add Task</label>
                <div class="form-group">

                    <input id="new-item" asp-for="Text" class="form-control" />
                    <span asp-validation-for="Text" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Date" class="control-label"></label>
                    <input asp-for="Date" class="form-control" />
                </div>
                <div class="form-group">
                    <select asp-for="Priority" class="form-control">
                        <option>usual</option>
                        <option>important</option>
                        <option>unimportant</option>
                    </select>
                    <span asp-validation-for="Priority" class="text-danger"></span>
                    <input type="submit" value="Create" class="button" />
                </div>
            </p>
        </form>
    </div>
    <footer class="footer">
        &copy; 2021 - WebToDo
    </footer>
</body>
</html>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
